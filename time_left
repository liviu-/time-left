#!/usr/bin/env bash

# Default values if absolute time not given
if [ "$#" -eq 0 ];then
    HOUR=$(date | awk -F'[ :]' '$0=$5');
    MINUTE=30;
else
    HOUR=$1;
    MINUTE=$2;
fi

while true;
do
    MAX_TIME=$(($HOUR * 60 + $MINUTE));
    CURRENT_TIME=$(date | awk '$0 = $4' | awk -F: '$0 = $1 * 60 + $2')
    DIFFERENCE=$(($MAX_TIME - $CURRENT_TIME))
    if [[ $DIFFERENCE > 0 ]]
    then
        echo $DIFFERENCE " minutes left";
        sleep 60
    else
        break;
    fi
done
